- flash.each do |type, message|
  = message
%table.table
  %thead.thead-dark
    %tr
      %th{:scope => "col"} id
      %th{:scope => "col"} Название
      %th{:scope => "col"} Серия
      %th{:scope => "col"} ISBN
      %th{:scope => "col"}
      %th{:scope => "col"}
  %tbody
    -@books.each do |book|
      %tr
        %th{:scope => "row"}=book.id
        %td=link_to book.title, admin_book_path(book.id)
        %td=book.series
        %td=book.isbn
        %td=link_to "edit", edit_admin_book_path(book.id)
        %td=link_to "delete", admin_book_path(book.id), method: "delete"

= paginate @books, outer_window: 3


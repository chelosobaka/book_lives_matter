.row
  .col-6
    .container-devise
      %h3
        Edit #{resource_name.to_s.humanize}
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :email, content_tag(:span , "", class: ["fa", "fa-at"]).html_safe, id: "icon"
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email"
        .field
          = f.label :username, content_tag(:span , "", class: ["fa", "fa-user"]).html_safe, id: "icon"
          = f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "username"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .field
          %small.text-danger
            Leave blank if you don't want to change it
          %br
          = f.label :password, content_tag(:span , "", class: ["fa", "fa-lock"]).html_safe, id: "icon"
          = f.password_field :password, autocomplete: "new-password", placeholder: "password"
          - if @minimum_password_length
            %small.text-danger
              Password:
              (#{@minimum_password_length} characters minimum)
        .field
          = f.label :password_confirmation, content_tag(:span , "", class: ["fa", "fa-lock"]).html_safe, id: "icon"
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password confirmation"
        .field
          %small.text-danger
            We need your current password to confirm your changes
          %br
          = f.label :current_password, content_tag(:span , "", class: ["fa", "fa-lock"]).html_safe, id: "icon"
          = f.password_field :current_password, autocomplete: "current-password", placeholder: "current password"
        .actions
          = f.submit "Update", class: "btn btn-primary"
  .col-6
    .container-devise
      %h3 Cancel my account
      %p
        Unhappy?
        = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary"
      = link_to "Back", :back
